<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Agri-Energy Connect</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <nav class="navbar navbar-expand navbar-light bg-light mb-4">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Agri-Energy Connect</a>
            <div class="navbar-nav">
                @if (User.IsInRole("Farmer"))
                {
                    <a class="nav-link" asp-controller="Farmer" asp-action="MyProducts">My Products</a>
                }
                else if (User.IsInRole("Employee"))
                {
                    <a class="nav-link" asp-controller="Employee" asp-action="AllProducts">All Products</a>
                    <a class="nav-link" asp-controller="Employee" asp-action="AddFarmer">Add Farmer</a>
                }
                <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
            </div>
        </nav>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
